---
interface Props{
    AcercaDeMi: string
    Pilas: string
    Proyectos: string
    Contacto: string
    id: string
    id2: string
    id3: string
    id4: string
}

const { AcercaDeMi, Pilas, Proyectos, Contacto, id, id2, id3, id4} = Astro.props
---

<label class='BarraLateral'>
    <form class='Despliegue'>
        <input type="checkbox" class='check' />

        <div class="toggle">
            <span class="top_line common"></span>
            <span class="middle_line common"></span>
            <span class="bottom_line common"></span>
        </div>

        <div class="slide">
            <ul>
                <li><a class="id" href={id}>{AcercaDeMi}</a></li>
                <li><a class="id" href={id2}>{Pilas}</a></li>
                <li><a class="id" href={id3}>{Proyectos}</a></li>
                <li><a class="id" href={id4}>{Contacto}</a></li>
            </ul>
        </div>
    </form>
</label>

<style>
    @media(max-width: 900px){
    .slide{
        width: auto;
        height: 800px;
        transition: 0.5s ease;
        transform: translateX(-100%);
        padding: 10% 0;
        background-color: rgb(225, 255, 0);;
        border-radius: 0 10px 20px 0;
        position: fixed;
        overflow-y: auto;
    }

    .BarraLateral{
        position: absolute;
        z-index: 1;
    }

    .BarraLateral ul li a{
        color: rgb(0, 0, 0);
        font-weight: 500;
        padding: 5px 0;
        display: block;
        text-transform: capitalize;
        transition: 0.2s ease-out;
        padding: 20px;
        text-decoration: none;
    }


    .BarraLateral ul li{
        background-color: transparent;
        list-style: none;
    }

    .BarraLateral ul li:hover{
        background-color: rgb(255, 255, 255);
        border-radius: 10px;
        transform: scale(1.1);
    }

    .BarraLateral ul li a:hover{
        color: #000000;
    }

    /* FUNCION DE LA BARRA */
    .check{
        display: none;
        visibility: hidden;
    }

    .toggle{
        top:0;
        position: fixed;;
        height: 50px;
        width: 40px;
        z-index: 1;
        border-radius: 2px;
    }

    .toggle .common{
        position: absolute;
        padding: 2%;
        height: 4px;
        width: 30px;
        background-color: rgb(255, 255, 255);
        border-radius: 50px;
        transition: 0.3s ease;
    }

    .toggle .top_line{
        top: 30%;
        left: 90%;
        transform: translate(-50%, -50%);
    }

    .toggle .middle_line{
        top: 50%;
        left: 90%;
        transform: translate(-50%, -50%);
    }

    .toggle .bottom_line{
        top: 70%;
        left: 90%;
        transform: translate(-50%, -50%);
    }

    input:checked ~ .toggle .top_line{
        left: 2px;
        top: 14px;
        width: 25px;
        transform: rotate(45deg);
        background-color: #000000;
    }

    input:checked ~ .toggle .bottom_line{
        left: 2px;
        top: 14px;
        width: 25px;
        transform: rotate(-45deg);
        background-color: #000000;
    }

    input:checked ~ .toggle .middle_line{
        opacity: 0;
        transform: translateX(20px)
    }

    input:checked ~ .slide{
        transform: translateX(0px);
        box-shadow: 0 0 15px #061D20;
    }
}

@media(min-width: 901px){
    .BarraLateral{
        display: none;
    }
}
</style>